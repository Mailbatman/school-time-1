generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model User {
  id         String   @id @db.Uuid
  email      String   @unique
  firstName  String?
  lastName   String?
  createdAt  DateTime @default(now())
  role       Role     @default(PARENT_STUDENT)
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
  SCHOOL_ADMIN
  TEACHER
  PARENT_STUDENT
}
